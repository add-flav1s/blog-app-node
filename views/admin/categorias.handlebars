<h2>Lista de categorias</h2>
<hr />
<a href="categorias/add">
  <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}

  <div class="card mt-3">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <h6>{{slug}}</h6>
      <small>Criado em: {{date}}</small><br />
      <a href="categorias/edit/{{_id}}">
        <button class="btn btn-dark mt-3">Editar categoria</button>
      </a>
    </div>
  </div>

{{else}}

{{/each}}