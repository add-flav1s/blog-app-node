<h2>Lista de categorias</h2>
<hr />
<a href="categorias/add">
  <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}

  <div class="card mt-3">
    <div class="card-body">
      <h5><b>NOME: </b>{{nome}}</h5>
      <span><b>CATEGORIA: </b>{{slug}}</span>
      <br />
      <small>Criado em: {{date}}</small>
      <br />
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col col-lg-2">
            <a href="categorias/edit/{{_id}}">
              <button class="btn btn-sm btn-warning mt-3">Editar categoria</button>
            </a>
          </div>
          <div class="col">
            <form action="/admin/categorias/deletar/{{_id}}" method="post">
              <input type="hidden" name="id" value="{{_id}}" />
              <button type="submit" class="btn btn-danger btn-sm mt-3">Excluir
                categoria</button>
            </form>
          </div>
      </div>
    </div>
  </div>

{{else}}
  <h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}